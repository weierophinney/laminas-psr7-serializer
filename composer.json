{
    "name": "laminas/laminas-diactoros-serializer",
    "description": "Provides various PSR-7 HTTP message de/serializers, using PSR-17 for serialization.",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "psr-7",
        "psr-17"
    ],
    "support": {
        "docs": "https://docs.laminas.dev/laminas-diactoros-serializer/",
        "issues": "https://github.com/laminas/laminas-diactoros-serializer/issues",
        "source": "https://github.com/laminas/laminas-diactoros-serializer",
        "rss": "https://github.com/laminas/laminas-diactoros-serializer/releases.atom",
        "forum": "https://discourse.laminas.dev/"
    },
    "require": {
        "php": "~8.0.0 || ~8.1.0 || ~8.2.0",
        "psr/http-factory-implementation": "^1.0 || ^2.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "~2.5.0",
        "laminas/laminas-diactoros": "^2.18.1",
        "phpunit/phpunit": "^9.5.28",
        "psr/container": "^1.0 || ^2.0"
    },
    "autoload": {
        "psr-4": {
            "Laminas\\Diactoros\\Serializer\\": "src//"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaminasTest\\Diactoros\\Serializer\\": "test/"
        }
    },
    "extra": {
        "laminas": {
            "config-provider": "Laminas\\Diactoros\\Serializer\\ConfigProvider"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
